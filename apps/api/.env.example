# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5434/workflow

# JWT & Auth
JWT_SECRET=dev_jwt_secret_change_me
NEXTAUTH_SECRET=dev_nextauth_secret_change_me

# API URLs
API_URL=http://localhost:3001
WEB_URL=http://localhost:3000

# Stripe (for billing)
# Get your keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# SendGrid (for emails)
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
MAIL_FROM=YourApp <no-reply@yourapp.com>

# Frontend URL (used in invite emails and redirects)
APP_URL=http://localhost:5173

# Dev mode: return invite token in API response for testing (set to false in production)
INVITE_EMAIL_DEV_ECHO=true

# AWS S3 (for file uploads via presigned URLs)
# Create an S3 bucket and IAM user with S3 permissions
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
S3_PRESIGN_EXPIRES_SEC=300  # seconds (60-300 recommended)
